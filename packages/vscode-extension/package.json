{
    "name": "i18n-init-keys",
    "private": true,
    "version": "0.0.1",
    "displayName": "i18n keys",
    "description": "Генерация ключей для i18n",
    "icon": "resources/i18n-icon.png",
    "engines": {
        "vscode": "^1.96.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [],
    "main": "./dist/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "I18nInitKeys.I18nInitKeys",
                "title": "I18n init keys",
                "icon": {
                    "light": "./resources/i18n-icon.png",
                    "dark": "./resources/i18n-icon.png"
                }
            }
        ],
        "menus": {
            "editor/title": [
                {
                    "command": "I18nInitKeys.I18nInitKeys",
                    "group": "navigation",
                    "when": "editorLangId =~ /(javascript|typescript|json)/",
                    "alt": "I18nInitKeys.I18nInitKeys",
                    "title": "I18N"
                }
            ],
            "editor/context": [
                {
                    "command": "I18nInitKeys.I18nInitKeys",
                    "group": "I18n",
                    "when": "editorLangId =~ /(javascript|typescript|json)/"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src --config eslint.config.mjs",
        "lint:fix": "eslint src --config eslint.config.mjs --fix",
        "build": "vsce package --no-dependencies --baseContentUrl=https://a.yandex-team.ru/data-ui/i18n/packages/vscode-extension --allow-missing-repository --skip-license",
        "typecheck": "tsc --noEmit"
    },
    "dependencies": {
        "tslib": "^2.8.1"
    },
    "devDependencies": {
        "@types/vscode": "^1.96.0",
        "@types/mocha": "^10.0.10",
        "@types/node": "20.x",
        "@typescript-eslint/eslint-plugin": "^8.22.0",
        "@typescript-eslint/parser": "^8.22.0",
        "eslint": "^9.19.0",
        "typescript": "^5.7.3",
        "@vscode/test-cli": "^0.0.10",
        "@vscode/test-electron": "^2.4.1",
        "@vscode/vsce": "^3.2.0",
        "eslint-config": "workspace:*"
    }
}
