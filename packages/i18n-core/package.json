{
  "name": "@gravity-ui/i18n-core",
  "version": "1.0.0",
  "license": "MIT",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/esm/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "pnpm run build:clean && pnpm run build:compile",
    "build:compile": "tsc -p tsconfig.json && tsc -p tsconfig.cjs.json",
    "build:clean": "rm -rf dist",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "jest",
    "typecheck": "tsc --noEmit"
  },
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "i18n"
  ],
  "dependencies": {
    "@formatjs/fast-memoize": "^2.2.2",
    "@formatjs/intl": "2.10.8",
    "intl-messageformat": "10.7.0",
    "@gravity-ui/i18n-types": "workspace:*"
  },
  "devDependencies": {
    "eslint-config": "workspace:*",
    "@types/jest": "^29.5.14",
    "jest": "29.7.0",
    "ts-jest": "29.1.1",
    "typescript": "^5.6.3",
    "eslint": "9.14.0"
  },
  "engines": {
    "node": ">= 18"
  }
}
