{
  "name": "@gravity-ui/eslint-plugin-i18n",
  "version": "2.0.0",
  "description": "i18n rules for eslint",
  "license": "UNLICENSED",
  "main": "./dist/index.js",
  "exports": "./dist/index.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "pnpm run build:clean && pnpm run build:compile",
    "build:compile": "tsc -p tsconfig.cjs.json",
    "build:clean": "rm -rf dist",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "jest",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "i18n",
    "eslint"
  ],
  "dependencies": {
    "@gravity-ui/i18n-cli": "workspace:*",
    "@types/estree-jsx": "^1.0.5",
    "estree-util-build-jsx": "^3.0.1",
    "short-uuid": "^5.2.0",
    "tslib": "^2.8.1"
  },
  "devDependencies": {
    "@gravity-ui/eslint-config": "^3.1.1",
    "@gravity-ui/prettier-config": "^1.1.0",
    "@rollup/plugin-json": "^6.1.0",
    "@types/estree": "^1.0.8",
    "@types/jest": "^29.5.14",
    "@types/node": "^24.7.0",
    "@types/uuidv4": "2.0.0",
    "@typescript-eslint/utils": "^8.25.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.6.3"
  },
  "peerDependencies": {
    "eslint": ">=8.56.0"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --fix --quiet"
    ]
  }
}
