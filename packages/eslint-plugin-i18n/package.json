{
  "name": "@gravity-ui/eslint-plugin-i18n",
  "version": "2.3.1",
  "description": "i18n rules for eslint",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/gravity-ui/i18n.git"
  },
  "main": "./dist/index.js",
  "exports": "./dist/index.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "pnpm run build:clean && pnpm run build:compile",
    "build:compile": "tsc -p tsconfig.cjs.json",
    "build:clean": "rm -rf dist",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "jest",
    "typecheck": "tsc --noEmit"
  },
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "i18n",
    "eslint"
  ],
  "dependencies": {
    "@gravity-ui/i18n-cli": "workspace:*",
    "@types/estree-jsx": "^1.0.5",
    "estree-util-build-jsx": "^3.0.1",
    "short-uuid": "^5.2.0",
    "tslib": "catalog:"
  },
  "devDependencies": {
    "eslint-config": "workspace:*",
    "@gravity-ui/prettier-config": "^1.1.0",
    "@rollup/plugin-json": "^6.1.0",
    "@types/estree": "^1.0.8",
    "@types/jest": "catalog:",
    "@types/node": "^24.7.0",
    "@types/uuidv4": "2.0.0",
    "eslint": "catalog:",
    "jest": "catalog:",
    "ts-jest": "catalog:",
    "typescript": "catalog:"
  },
  "peerDependencies": {
    "eslint": ">=8.56.0",
    "@typescript-eslint/utils": "^8.25.0"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --fix --quiet"
    ]
  }
}
